{#
/**
 * @file
 * Theme override for a breadcrumb trail.
 *
 * Available variables:
 * - breadcrumb: Breadcrumb trail items.
 */
#}
{% if breadcrumb %}
  <nav role="navigation" aria-labelledby="system-breadcrumb">
    <h2 id="system-breadcrumb" class="visually-hidden">{{ 'Breadcrumb'|t }}</h2>
    <ol>
      {% for key, item in breadcrumb %}
        <li>
          {% if item.url %}
            {% set class = '' %}
            {% if (key + 2) < breadcrumb|length %}
              {% if breadcrumb[key + 1].url %}
              {% else %}
                {% set class = 'last' %}
              {% endif %}
            {% endif %}

            <a href="{{ item.url }}" class="{{ class }}">{{ item.text }}</a>
          {% else %}
            {{ item.text }}
          {% endif %}
        </li>
      {% endfor %}
    </ol>
  </nav>
{% endif %}
