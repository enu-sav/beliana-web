{#
/**
 * @file
 * Default theme implementation to present a media entity.
 *
 * Available variables:
 * - name: Name of the media.
 * - content: Media content.
 *
 * @see template_preprocess_media()
 *
 * @ingroup themeable
 */
#}

<article{{ attributes }}>
  {% if content %}      
      <div class="left metadata">
        {{ content|without('field_obrazok')|without('field_obrazok_odkaz') }}

        {% if back_url %}
            <a href="{{ back_url }}" class="back"><i class="icon-back"></i>Naspäť na stránku hesla</a>
        {% endif %}
      </div>

      <div class="right media">
        {{ content.field_obrazok }}
        {{ content.field_obrazok_odkaz }}
      </div>
  {% endif %}
</article>
