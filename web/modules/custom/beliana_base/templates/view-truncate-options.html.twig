  <div class="item">
    <p>{{ 'label-im-showing'|t }}</p>
    <div class="truncate-button">
      <button tabindex="0" type="button" aria-label="{{ 'display-options'|t }}" id="label-truncate" class="label"
              aria-haspopup="true" aria-controls="truncate-controls">{{ 'label-truncated-article'|t }}<b
